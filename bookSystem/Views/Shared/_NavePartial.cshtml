<nav class="w-100 d-flex px-4 py-2 mb-4 shadow-sm align-items-center">
    <!-- open sidebar on small screens -->
    <button class="btn py-0 d-lg-none" id="open-sidebar">
        <span class="bi bi-list text-primary h3"></span>
    </button>

    <div class="dropdown ms-auto">
        <button class="btn py-0 d-flex align-items-center" id="logout-dropdown" data-bs-toggle="dropdown" aria-expanded="false">
            <span class="bi bi-person text-primary h4 me-2"></span>

            @if (User.Identity.IsAuthenticated)
            {
                <span class="fw-semibold text-dark">Hello, @User.Identity.Name!</span>
            }
            else
            {
                <span class="fw-semibold text-dark">Hello, Guest</span>
            }

            <span class="bi bi-chevron-down ms-2 mb-2 small"></span>
        </button>

        <ul class="dropdown-menu dropdown-menu-end border-0 shadow-sm" aria-labelledby="logout-dropdown">
            @if (User.Identity.IsAuthenticated)
            {
                <li><a class="dropdown-item" asp-controller="Account" asp-action="SignOut">Logout</a></li>
            }
            else
            {
                <li><a class="dropdown-item" asp-controller="Account" asp-action="Login">Login</a></li>
                <li><a class="dropdown-item" asp-controller="Account" asp-action="Register">Register</a></li>
            }
        </ul>
    </div>
</nav>