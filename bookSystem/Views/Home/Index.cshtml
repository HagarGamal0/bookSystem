@* Views/Home/Index.cshtml (Example file name) *@
@{
 
    ViewData["Title"] = "Welcome to the Library System";
}


<div class="text-center py-5 border-bottom"
     style="background-image: url('https://images.unsplash.com/photo-1521587760476-6c12a4b040da?ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8bGlicmFyeXxlbnwwfHwwfHx8MA%3D%3D&fm=jpg&q=60&w=3000'); background-size: cover; background-position: center; color: white; min-height: 40vh; display: flex; flex-direction: column; justify-content: center;">

    <h1 class="display-3 fw-bold" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.7);">
        Manage Your Books Effortlessly
    </h1>
    <p class="mt-3 mx-auto lead" style="max-width: 600px; text-shadow: 1px 1px 3px rgba(0,0,0,0.7);">
        Your complete solution for tracking, cataloging, and managing library resources and loans.
    </p>

    <div class="mt-4 d-flex flex-column flex-sm-row justify-content-center gap-3">

        <a href="/Book/Index" class="btn btn-primary btn-lg shadow-lg px-4 py-2 d-flex align-items-center justify-content-center">
            <i class="bi bi-book-half me-2"></i> @* Changed to Bootstrap Icon *@
            <strong>View Books</strong>
        </a>

        @* C# Role Check: Only display these buttons if the user is in the "Admin" role *@
        @if (User.IsInRole("Admin"))
        {
            <a href="/Books/Create" class="btn btn-success btn-lg shadow-lg px-4 py-2 d-flex align-items-center justify-content-center">
                <i class="bi bi-plus-circle-fill me-2"></i> @* Changed to Bootstrap Icon *@
                <strong>Add New Book </strong>
            </a>

            <a href="/Category/Create" class="btn btn-warning btn-lg shadow-lg px-4 py-2 d-flex align-items-center justify-content-center text-dark">
                <i class="bi bi-clipboard-check-fill me-2"></i> @* Changed to Bootstrap Icon *@
                <strong>Manage Catygory</strong>
            </a>
        }
    </div>
</div>

---

<div class="container-fluid mt-4">
    <div class="row row-cols-1 row-cols-lg-3 g-4">
        <div class="col">
            <div class="text-center p-3 bg-light rounded shadow-sm">
                @* Replace "4,500+" with actual data like @Model.TotalBooks *@
                <p class="display-4 fw-bold text-primary">4,500+</p>
                <p class="lead text-muted mb-0">Total Books in System</p>
            </div>
        </div>
        <div class="col">
            <div class="text-center p-3 bg-light rounded shadow-sm">
                @* Replace "150" with actual data like @Model.BooksOnLoan *@
                <p class="display-4 fw-bold text-success">150</p>
                <p class="lead text-muted mb-0">Currently on Loan</p>
            </div>
        </div>
        <div class="col">
            <div class="text-center p-3 bg-light rounded shadow-sm">
                @* Replace "25" with actual data like @Model.OverdueItems *@
                <p class="display-4 fw-bold text-warning">25</p>
                <p class="lead text-muted mb-0">Overdue Items</p>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}