@model bookSystem.Services.RoleService

@{
    ViewData["Title"] = "Create Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">Create New Role</h1>

<form asp-action="SaveRole" method="post" class="w-50">
    <div class="form-group mb-3">
        <label asp-for="RoleName" class="form-label fw-bold"></label>
        <input asp-for="RoleName" class="form-control" placeholder="Enter role name" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Role</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success mt-3">@ViewBag.Message</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}