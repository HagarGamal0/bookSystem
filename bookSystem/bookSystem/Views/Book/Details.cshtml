@model bookSystem.Dtos.BookDto
@{
    ViewBag.Title = "Book Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Book Details</h2>

<div class="card p-4 shadow-sm">
    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>Author:</strong> @Model.Author</p>
    <p><strong>Category:</strong> @Model.CategoryName</p>

    <a class="btn btn-secondary" href="@Url.Action("Index")">Back</a>
    <a class="btn btn-warning" href="@Url.Action("Edit", new { id = Model.Id })">Edit</a>
</div>
